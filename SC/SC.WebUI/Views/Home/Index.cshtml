            App.init(); //Initialise plugins and elements
        });


    </script>
    <!-- /JAVASCRIPTS -->
    @Scripts.Render("~/Scripts/angular")
    @Scripts.Render("~/Scripts/AppCommon")
    @Scripts.Render("~/Scripts/App")
